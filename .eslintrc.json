{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "ecmaFeatures": {
        "impliedStrict":true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",    
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi":"off",
        "space-before-function-paren":"off"
    }
}